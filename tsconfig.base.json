{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@porrtal/api": ["libs/porrtal/api/src/index.ts"],
      "@porrtal/shell": ["libs/porrtal/shell/src/index.ts"],
      "@porrtal/shell-blueprint": ["libs/porrtal/shell-blueprint/src/index.ts"],
      "@porrtal/shell-material": ["libs/porrtal/shell-material/src/index.ts"],
      "@porrtal/split": ["libs/porrtal/split/src/index.ts"],
      "@porrtal/user": ["libs/porrtal/user/src/index.ts"],
      "@test-comps/first-test-comp": [
        "libs/test-comps/first-test-comp/src/index.ts"
      ],
      "@test-comps/second-test-comp": [
        "libs/test-comps/second-test-comp/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
